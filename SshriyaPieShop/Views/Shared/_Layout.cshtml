
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MYPieShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SshriyaPieShop.styles.css" asp-append-version="true" />
     <style>
    
</style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="PIE" asp-action="list">Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="pie" asp-action="PiesOfTheWeek">Pies</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="pie" asp-action="ListMini">ListMini</a>
                        </li>
                       
                            <li class="dropdown">
                              <button class="dropbtn">Filter</button>
                              <div class="dropdown-content">
                               <a class="nav-link" asp-controller="pie" asp-action="Ascending">Ascending</a>
                              <a class="nav-link" asp-controller="pie" asp-action="Descending">Descending</a>
                              
                              </div>
                            </li>
                       
                        
                        @await Component.InvokeAsync("CategoryMenu")
                       

                        <li class="nav-item">
                             <partial name = "_LoginPartial"/>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="pie" asp-action="Create">Create</a>
                        </li>
                         <li class="nav-item">
                            <a asp-controller="shoppingcart" asp-action="Index"> <p class="lead">
                    <img class="img-responsive" alt="Pie Shop" src="~/Image/cart.png" height="40" width="40">
                    
                </p>  </a>
                        </li>
                         <form class="d-flex" asp-controller="Pie" asp-action="FindPie" method="get">
                         <input class="form-control me-sm-2" type="text" placeholder="Search" name="name">
                        <button class="btn btn-primary" type="submit">Search</button>
                      </form>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
  
        <div class="container">
        <div class="row">
            <h3 >MY-PIE-SHOP.</h3>
            <div>
                <blockquote class="blockquote mb-0">
                 <p>“We must have a pie. Stress cannot exist in the presence of a pie.”</p>
      
                 </blockquote></div>
            <div class="col-md-2">
                <p class="lead">
                    <img class="img-responsive" alt="Pie Shop" src="~/Image/logo.jpg" height="100" width="100">

                </p>
           </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div></div>

    @*<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
